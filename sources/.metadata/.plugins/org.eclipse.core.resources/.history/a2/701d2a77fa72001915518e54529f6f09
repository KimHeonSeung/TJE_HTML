<!-- <table> </table> : 표 전체 -->
<!-- <tr> </tr>		  : 행 -->
<!-- <td> </td>		  : 열 -->
<!-- th 			  : td로 셀 만들고 글자를 진하게 바꾸고 가운데 정렬
	 					제목으로 사용하는 셀은 th로 간단히 만들 수 있다. -->

<h1>테이블 출력</h1>
<table border="1">
	<thead>
	<tr>
		<th>제목1</th>
		<th>제목2</th>
	</tr>
	</thead>
	
	<tfoot>
	<tr>
		<th colspan="2">테이블 하단 메세지</th>
	</tr>
	</tfoot>
	
	<tbody>
	<tr>
		<td>내용4</td>
		<td>내용5</td>
	</tr>
	</tbody>
</table>

</body>
</html>